import org.openqa.selenium.chrome.ChromeOptions;
import org.openqa.selenium.edge.EdgeDriver;

import java.util.Random;

import static org.junit.Assert.assertEquals;

public class MailchimpStepdefs {
    WebDriver driver;
    // WebDriver driver2;

